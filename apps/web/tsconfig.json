{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "preserve",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./src/*"],
      "lexical": ["node_modules/lexical/dist/index.d.ts"],
      "@lexical/react": ["node_modules/@lexical/react/dist/index.d.ts"]
    }
  },
  "include": ["src"]
}
